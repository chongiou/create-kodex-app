{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2022",
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "@zdjl/kodex",
    "useDefineForClassFields": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "#/*": [
        "./*"
      ]
    },
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "types/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
